{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6"],
    "types": [
      "reflect-metadata",
      "@types/jest",
      "@types/mocha"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules"
  ]
}